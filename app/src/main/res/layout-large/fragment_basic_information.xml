<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@color/black"
    tools:context=".view.ShopRegistration.BasicInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/extra_bold_h3"
            android:paddingStart="16dp"
            android:text="Shop Details"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- Shop Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/PrimarySnooQ"
            app:hintTextColor="@color/PrimarySnooQ"
            app:startIconDrawable="@drawable/shop_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp"
            android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Category -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/PrimarySnooQ"
            app:hintTextColor="@color/PrimarySnooQ"
            app:startIconDrawable="@drawable/shop_categoty">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dropDownSelector="#D0F8D0"
                android:hint="Category"
                android:popupBackground="@color/white"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Owner Name -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/PrimarySnooQ"
            app:hintTextColor="@color/PrimarySnooQ"
            app:startIconDrawable="@drawable/shop_owner">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Owner Name"
                android:inputType="textPersonName"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contact Number -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/PrimarySnooQ"
            app:hintTextColor="@color/PrimarySnooQ"
            app:startIconDrawable="@drawable/contact_number">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:inputType="phone"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email Address -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="@color/PrimarySnooQ"
            app:hintTextColor="@color/PrimarySnooQ"
            app:startIconDrawable="@drawable/shop_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:longClickable="false"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Shop Description -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            app:boxStrokeColor="@color/PrimarySnooQ"
            app:hintTextColor="@color/PrimarySnooQ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextShopDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Shop Description"
                android:inputType="textMultiLine"
                android:lines="7"
                android:textCursorDrawable="@color/black"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

</ScrollView>
