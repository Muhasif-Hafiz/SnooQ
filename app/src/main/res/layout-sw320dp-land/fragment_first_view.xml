<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/img_1"
    tools:context=".view.onBoarding.screens.FirstViewFragment"
    android:gravity="center">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/scanlogo"
            android:contentDescription="Scan image" />

        <!-- "Scan" Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/bold_h1"
            android:layout_marginTop="8dp" />

        <!-- "Scan and hop into your favorite shop." Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan and hop into \n your favorite shop."
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/bold_h1"
            android:layout_marginTop="8dp" />

        <!-- Dots Indicator -->
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:dotsColor="@android:color/darker_gray"
            app:dotsCornerRadius="8dp"
            app:dotsSize="6dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="#3AEA5F" />

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/Next1ViewPager"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#3AEA5F"
            android:padding="8dp"
            app:icon="@drawable/baseline_arrow_forward_24"
            app:iconSize="32dp"
            app:cornerRadius="24dp" />
    </LinearLayout>
</LinearLayout>
