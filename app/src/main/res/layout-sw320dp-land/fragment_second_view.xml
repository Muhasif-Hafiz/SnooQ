<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_1"
    tools:context=".view.onBoarding.screens.SecondViewFragment"
    android:gravity="center_vertical|center_horizontal">

    <!-- Shopping Bag Icon -->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:src="@drawable/shoppingbagicon"
        android:contentDescription="Shopping Bag Icon"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center" />

    <!-- "Shop" Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textStyle="bold"
        android:textSize="36sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_h1"
        android:layout_marginTop="8dp"
        android:layout_gravity="center" />

    <!-- Description Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse stock, \n shop with ease."
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_h1"
        android:layout_marginTop="8dp"
        android:layout_gravity="center" />

    <!-- Dots Indicator -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:dotsColor="@android:color/darker_gray"
        app:dotsCornerRadius="8dp"
        app:dotsSize="6dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.5"
        app:selectedDotColor="#3AEA5F"
        android:layout_gravity="center" />

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Next2ViewPager"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#3AEA5F"
        android:padding="10dp"
        app:icon="@drawable/baseline_arrow_forward_24"
        app:iconSize="32dp"
        app:cornerRadius="28dp"
        android:textAllCaps="false"
        android:layout_gravity="center" />
</LinearLayout>
