<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img_1"
    tools:context=".view.onBoarding.screens.FirstViewFragment"
    android:gravity="center">

    <!-- Logo -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="225dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/scanlogo"
        android:contentDescription="Scan image"
        android:layout_gravity="center" />

    <!-- "Scan" Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="56sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_h1"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

    <!-- "Scan and hop into your favorite shop." Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan and hop into \n your favorite shop."
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/bold_h1"
        android:layout_marginTop="12dp"
        android:layout_gravity="center" />

    <!-- Dots Indicator -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:dotsColor="@android:color/darker_gray"
        app:dotsCornerRadius="8dp"
        app:dotsSize="10dp"
        app:dotsSpacing="8dp"
        app:dotsWidthFactor="2.5"
        app:selectedDotColor="#3AEA5F"
        android:layout_gravity="center" />

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/Next1ViewPager"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#3AEA5F"
        android:padding="12dp"
        app:icon="@drawable/baseline_arrow_forward_24"
        app:iconSize="40dp"
        app:cornerRadius="36dp"
        android:layout_gravity="center" />
</LinearLayout>
