<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".view.onBoarding.screens.FirstViewFragment">

    <LinearLayout
        android:id="@+id/frame_2"
        android:layout_width="173dp"
        android:layout_height="93dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/snooq_main_"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/logo_black" />

        <TextView
            android:id="@+id/snooq"
            android:layout_width="115dp"
            android:layout_height="93dp"
            android:fontFamily="@font/dongle_bold"
            android:gravity="top"
            android:text="@string/snooq"
            android:textAppearance="@style/snooq" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_qr"
        android:layout_width="240dp"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-86dp"
        android:background="@drawable/ellipse_21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_qr">

        <TextView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="top"
            android:text="@string/scan"
            android:textAppearance="@style/scan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/your_shoppi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center_horizontal|top"
            android:text="@string/your_shoppi"
            android:textAppearance="@style/your_shoppi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scan" />

        <LinearLayout
            android:id="@+id/threeDots"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/your_shoppi">

            <View
                android:id="@+id/ellipse_2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/ellipse_2" />

            <View
                android:id="@+id/ellipse_3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/ellipse_4" />

            <View
                android:id="@+id/ellipse_4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/ellipse_4" />
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/Next1ViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#3AEA5F"
            android:fontFamily="@font/inter_medium"
            android:text="Next"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/threeDots" />

        <TextView
            android:id="@+id/skip1ViewPager"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/skip_bottom_background"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Skip"
            android:textAllCaps="false"
            android:textColor="#C6D2C8"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Next1ViewPager" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
