<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:orientation="vertical"
    tools:context=".view.onBoarding.screens.FirstViewFragment">

    <!-- Logo -->
    <ImageView
        android:layout_width="216dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="25dp"
        android:contentDescription="Scan image"
        android:src="@drawable/scanlogo" />

    <!-- "Scan" Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:fontFamily="@font/bold_h1"
        android:gravity="center"
        android:text="Scan"
        android:textColor="@color/black"
        android:textSize="48sp" />

    <!-- "Scan and hop into your favorite shop." Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bold_h1"
        android:gravity="center"
        android:text="Scan and hop into \n your favorite shop."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Dots Indicator -->
    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        app:dotsColor="@android:color/darker_gray"
        app:dotsCornerRadius="8dp"
        app:dotsSize="8dp"
        app:dotsSpacing="4dp"
        app:dotsWidthFactor="2.5"
        app:selectedDotColor="#3AEA5F" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/Next1ViewPager"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"

        android:layout_marginBottom="16dp"
        android:backgroundTint="#3AEA5F"
        android:padding="12dp"
        android:textAllCaps="false"
        app:cornerRadius="24dp"
        app:icon="@drawable/baseline_arrow_forward_24"
        app:iconSize="45dp" />


</LinearLayout>