<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:scrollbarThumbVertical="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shop Images Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Images"
            android:textSize="32sp"
            android:fontFamily="@font/extra_bold_h3"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_shop_image"
            android:textSize="18sp"
            android:textColor="#1D251F"
            android:layout_marginBottom="24dp"/>

        <!-- Image Grid Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">
                    <ImageButton
                        android:id="@+id/btnUploadPhoto1"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder_background"
                        android:src="@drawable/select_image_bg"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">
                    <ImageButton
                        android:id="@+id/btnUploadPhoto2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder_background"
                        android:src="@drawable/select_image_bg"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">
                    <ImageButton
                        android:id="@+id/btnUploadPhoto3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder_background"
                        android:src="@drawable/select_image_bg"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">
                    <ImageButton
                        android:id="@+id/btnUploadPhoto4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder_background"
                        android:src="@drawable/select_image_bg"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">
                    <ImageButton
                        android:id="@+id/btnUploadPhoto5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder_background"
                        android:src="@drawable/select_image_bg"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp">
                    <ImageButton
                        android:id="@+id/btnUploadPhoto6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/image_placeholder_background"
                        android:src="@drawable/select_image_bg"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Social Media Links Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Media Links"
                android:textSize="32sp"
                android:fontFamily="@font/extra_bold_h3"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_links"
                android:textSize="18sp"
                android:textColor="#1D251F"
                android:layout_marginBottom="24dp"/>

            <!-- Instagram Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/instagram_img"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/insta_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:hint="Instagram"
                    android:padding="8dp"
                    android:textColorHint="#666666"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Facebook Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/facebook_img"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/facebook_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:hint="Facebook"
                    android:padding="8dp"
                    android:textColorHint="#666666"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Other Link Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/links_img"
                    android:layout_marginEnd="16dp"/>

                <EditText
                    android:id="@+id/other_link"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_border"
                    android:hint="Other"
                    android:padding="8dp"
                    android:textColorHint="#666666"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
